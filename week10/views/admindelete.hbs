<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{title}}</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-5">
        <h1 class="text-center mb-4">{{title}}</h1>

        <!-- Book 삭제 -->
        <div class="mt-4">
            <h2>도서 삭제 (Book)</h2>
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>ISBN</th>
                        <th>Title</th>
                        <th>Year</th>
                        <th>Category</th>
                        <th>Price</th>
                        <th>Author_ID</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each books}}
                    <tr>
                        <td>{{this.ISBN}}</td>
                        <td>{{this.Title}}</td>
                        <td>{{this.Year}}</td>
                        <td>{{this.Category}}</td>
                        <td>{{this.Price}}</td>
                        <td>{{this.Author_ID}}</td>
                        <td>
                            <form method="POST" action="/admin/delete">
                                <input type="hidden" name="tableName" value="Book">
                                <input type="hidden" name="identifier1" value="{{this.ISBN}}">
                                <button type="submit" class="btn btn-danger">삭제</button>
                            </form>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>

        <!-- Author 삭제 -->
        <div class="mt-4">
            <h2>저자 삭제 (Author)</h2>
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Name</th>
                        <th>URL</th>
                        <th>Address</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each authors}}
                    <tr>
                        <td>{{this.ID}}</td>
                        <td>{{this.Name}}</td>
                        <td>{{this.URL}}</td>
                        <td>{{this.Address}}</td>
                        <td>
                            <form method="POST" action="/admin/delete">
                                <input type="hidden" name="tableName" value="Author">
                                <input type="hidden" name="identifier1
                                " value="{{this.ID}}">
                                <button type="submit" class="btn btn-danger">삭제</button>
                            </form>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>

        <!-- Award 삭제 -->
        <div class="mt-4">
            <h2>수상 삭제 (Award)</h2>
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Name</th>
                        <th>Year</th>
                        <th>Author_ID</th>
                        <th>Book_ISBN</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each awards}}
                    <tr>
                        <td>{{this.ID}}</td>
                        <td>{{this.Name}}</td>
                        <td>{{this.Year}}</td>
                        <td>{{this.Author_ID}}</td>
                        <td>{{this.Book_ISBN}}</td>
                        <td>
                            <form method="POST" action="/admin/delete">
                                <input type="hidden" name="tableName" value="Award">
                                <input type="hidden" name="identifier1" value="{{this.ID}}">
                                <button type="submit" class="btn btn-danger">삭제</button>
                            </form>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>

        <!-- Warehouse 삭제 -->
        <div class="mt-4">
            <h2>창고 삭제 (Warehouse)</h2>
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Code</th>
                        <th>Address</th>
                        <th>Phone</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each warehouses}}
                    <tr>
                        <td>{{this.Code}}</td>
                        <td>{{this.Address}}</td>
                        <td>{{this.Phone}}</td>
                        <td>
                            <form method="POST" action="/admin/delete">
                                <input type="hidden" name="tableName" value="Warehouse">
                                <input type="hidden" name="identifier1" value="{{this.Code}}">
                                <button type="submit" class="btn btn-danger">삭제</button>
                            </form>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>

        <!-- Inventory 삭제 -->
        <div class="mt-4">
            <h2>재고 삭제 (Inventory)</h2>
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Book_ISBN</th>
                        <th>Warehouse_Code</th>
                        <th>Number</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each inventories}}
                    <tr>
                        <td>{{this.Book_ISBN}}</td>
                        <td>{{this.Warehouse_Code}}</td>
                        <td>{{this.Number}}</td>
                        <td>
                            <form method="POST" action="/admin/delete">
                                <input type="hidden" name="tableName" value="Inventory">
                                <input type="hidden" name="identifier1" value="{{this.Book_ISBN}}">
                                <input type="hidden" name="identifier2" value="{{this.Warehouse_Code}}">
                                <button type="submit" class="btn btn-danger">삭제</button>
                            </form>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>

        <!-- Contains 삭제 -->
        <div class="mt-4">
            <h2>장바구니 삭제 (Contains)</h2>
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Book_ISBN</th>
                        <th>Shopping_Basket_ID</th>
                        <th>Number</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each contains}}
                    <tr>
                        <td>{{this.Book_ISBN}}</td>
                        <td>{{this.Shopping_basket_BasketID}}</td>
                        <td>{{this.Number}}</td>
                        <td>
                            <form method="POST" action="/admin/delete">
                                <input type="hidden" name="tableName" value="Contains">
                                <input type="hidden" name="identifier1" value="{{this.Book_ISBN}}">
                                <input type="hidden" name="identifier2" value="{{this.Shopping_basket_BasketID}}">
                                <button type="submit" class="btn btn-danger">삭제</button>
                            </form>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
