<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{title}}</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f9f9f9;
            color: #333;
        }
        h1, h2 {
            text-align: center;
            color: #4CAF50;
        }
        form {
            max-width: 600px;
            margin: 20px auto;
            background: #fff;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }
        form label {
            display: block;
            margin-bottom: 8px;
            font-weight: bold;
        }
        form input {
            width: 100%;
            padding: 10px;
            margin-bottom: 15px;
            border: 1px solid #ddd;
            border-radius: 4px;
        }
        form button {
            width: 100%;
            padding: 10px;
            background-color: #4CAF50;
            color: white;
            border: none;
            border-radius: 4px;
            font-size: 16px;
            cursor: pointer;
        }
        form button:hover {
            background-color: #45a049;
        }
        ul {
            list-style: none;
            padding: 0;
        }
        ul li {
            background: #fff;
            margin: 10px auto;
            padding: 15px;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            max-width: 800px;
        }
        ul li strong {
            color: #333;
        }
        ul li form {
            display: flex;
            align-items: center;
            gap: 10px;
        }
        ul li button {
            padding: 5px 10px;
            font-size: 14px;
            color: white;
            border: none;
            border-radius: 4px;
            cursor: pointer;
        }
        ul li .reserve-btn {
            background-color: #FF5722;
        }
        ul li .reserve-btn:hover {
            background-color: #E64A19;
        }
        ul li .reserve-btn:disabled {
            background-color: #bbb;
            cursor: not-allowed;
        }
        p {
            text-align: center;
            color: #888;
        }
    </style>
</head>
<body>
    <h1>{{title}}</h1>

    <!-- 검색 폼 -->
    <form action="/customer/bookSearch" method="POST">
        <label for="title">Search by Title:</label>
        <input 
            type="text" 
            name="title" 
            id="title" 
            placeholder="Book Title" 
            value="{{searchConditions.title}}">

        <label for="authorName">Search by Author Name:</label>
        <input 
            type="text" 
            name="authorName" 
            id="authorName" 
            placeholder="Author Name" 
            value="{{searchConditions.authorName}}">

        <label for="awardName">Search by Award Name:</label>
        <input 
            type="text" 
            name="awardName" 
            id="awardName" 
            placeholder="Award Name" 
            value="{{searchConditions.awardName}}">

        <button type="submit">Search</button>
    </form>

    <!-- 검색 결과 표시 -->
    {{#if searchResult}}
        <h2>Search Results:</h2>
        <ul>
            {{#each searchResult}}
            <li>
                <strong>Title:</strong> {{this.Title}} |
                <strong>Category:</strong> {{this.Category}} |
                <strong>Year:</strong> {{this.Year}} |
                <strong>Price:</strong> {{this.Price}} |
                <strong>Stock:</strong> {{this.Total_Stock}}
                <form>
                    <label for="pickupTime-{{this.ISBN}}">Pickup Time:</label>
                    <input 
                        type="time" 
                        id="pickupTime-{{this.ISBN}}" 
                        required 
                        {{#if (eq this.Total_Stock 0)}}disabled{{/if}}>
                    <button 
                        type="button" 
                        class="reserve-btn" 
                        onclick="reserveBook('{{this.ISBN}}', '{{this.Total_Stock}}')" 
                        {{#if (eq this.Total_Stock 0)}}disabled{{/if}}>
                        {{#if (eq this.Total_Stock 0)}}Out of Stock{{else}}Reserve{{/if}}
                    </button>
                </form>
            </li>
            {{/each}}
        </ul>
    {{/if}}


    <!-- 초기 전체 데이터 표시 -->
    {{#if books.length}}
        <h2>All Books:</h2>
        <ul>
            {{#each books}}
            <li>
                <strong>Title:</strong> {{this.Title}} |
                <strong>Category:</strong> {{this.Category}} |
                <strong>Year:</strong> {{this.Year}} |
                <strong>Price:</strong> {{this.Price}} |
                <strong>Stock:</strong> {{this.Total_Stock}}
                <form>
                    <label for="pickupTime-{{this.ISBN}}">Pickup Time:</label>
                    <input 
                        type="time" 
                        id="pickupTime-{{this.ISBN}}" 
                        required 
                        {{#if (eq this.Total_Stock 0)}}disabled{{/if}}>
                    <button 
                        type="button" 
                        class="reserve-btn" 
                        onclick="reserveBook('{{this.ISBN}}', '{{this.Total_Stock}}')" 
                        {{#if (eq this.Total_Stock 0)}}disabled{{/if}}>
                        {{#if (eq this.Total_Stock 0)}}Out of Stock{{else}}Reserve{{/if}}
                    </button>
                </form>
            </li>
            {{/each}}
        </ul>
    {{else}}
        <p>No books available at the moment.</p>
    {{/if}}

    <script>
        function reserveBook(bookId, stock) {
    if (parseInt(stock, 10) <= 0) {
        alert("This book is out of stock!");
        return;
    }

    const userEmail = "{{loggedInUserEmail}}"; // 현재 로그인한 사용자 이메일
    const pickupTimeInput = document.querySelector(`#pickupTime-${bookId}`);
    const pickupTime = pickupTimeInput ? pickupTimeInput.value : null;

    if (!pickupTime) {
        alert("Please set a valid pickup time.");
        return;
    }

    console.log('Book ID:', bookId);
    console.log('Pickup Time:', pickupTime);

    fetch('/customer/reservation', {
        method: 'POST',
        headers: {
            'Content-Type': 'application/json',
        },
        body: JSON.stringify({ userEmail, bookId, pickupTime }),
    })
    .then(response => response.json())
    .then(data => {
        if (data.success) {
            alert('Reservation successful!');
        } else {
            alert(data.message || "Reservation failed.");
        }
    })
    .catch(error => {
        console.error('Error:', error);
        alert('An error occurred. Please try again.');
    });
}
    </script>
</body>
</html>